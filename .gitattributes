# Auto detect text files and perform LF normalization
* text=auto

# Nix files
*.nix text
flake.nix text
flake.lock text

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.fish text eol=lf

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Config files
*.toml text
*.yaml text
*.yml text
*.json text
*.conf text
*.config text

# Scripts
.justfile text
.envrc text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar.gz binary
*.tar binary
*.gz binary

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore 